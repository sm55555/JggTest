<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="회원상태"/>

            <TextView
                android:id="@+id/workerGradeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text=""/>

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#D5D5D5"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="신청 내역 확인"/>


        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#D5D5D5"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/modifyButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="회원정보관리"/>

        </LinearLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#D5D5D5"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:text="구직자 등록하기"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paymentButton"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="포인트충전하기/ 정회원 전환"/>

    <LinearLayout
        android:background="@drawable/border"
        android:id="@+id/noticeButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#303F9F"
            android:layout_weight="1"
            android:text="공지사항"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전공 굿 서비스 점검"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border"
        android:id="@+id/serviceCenterText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#303F9F"
            android:layout_weight="1"
            android:text="전공 굿 고객센터"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="042 - 321 - 2315"/>

    </LinearLayout>

</LinearLayout>