<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="용역 회원가입"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#D5D5D5"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="약관동의"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/termsCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이용약관 동의" />

        <Button
            android:id="@+id/termsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/termsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이용 약관(영어: Terms of service terms of use이나 terms and conditions으로도 알려짐, 줄여서 ToS 또는 TOS라고 부르기도 함)은 서비스를 이용하기 위해 동의해야만 하는 규칙이다. 이 글은 법에 관한 토막글입니다."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/privacyCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="개인정보 수집 이용 동의" />

        <Button
            android:id="@+id/privacyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체보기"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/privacyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이용 약관(영어: Terms of service terms of use이나 terms and conditions으로도 알려짐, 줄여서 ToS 또는 TOS라고 부르기도 함)은 서비스를 이용하기 위해 동의해야만 하는 규칙이다. 이 글은 법에 관한 토막글입니다."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="첨부파일"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주민등록증"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록하기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="통장 사본"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록하기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기초안전\n보건교육증"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록하기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/preButton"
            android:text="이전" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/registerButton"
            android:text="회원가입"/>

    </LinearLayout>

</LinearLayout>